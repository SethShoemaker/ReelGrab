@page
@model MediaSearchModel
@{
    ViewData["Title"] = Model.Q;
}

<form method="get">
    <div class="form-group">
        <input type="text" name="q" value="@Model.Q" placeholder="Search" class="form-control">
    </div>
    <div class="form-group mt-2">
        <button type="submit" class="btn btn-primary">Search</button>
    </div>
</form>

@if (Model.HasQuery && Model.Results.Count == 0)
{
    <p>No results found for '@Model.Q'.</p>
}
else if (Model.HasQuery && Model.Results.Count > 0)
{
    <ul>
        @foreach (var result in Model.Results)
        {
            <li>@result.Title</li>
        }
    </ul>
}